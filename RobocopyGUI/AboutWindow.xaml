<Window x:Class="RobocopyGUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Robocopy GUI" 
        Height="400" 
        Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- App Icon/Logo -->
            <TextBlock Text="ðŸ“" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15"/>
            
            <!-- App Name -->
            <TextBlock Text="Robocopy GUI" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource PrimaryColor}"/>
            
            <!-- Version -->
            <TextBlock x:Name="VersionText" 
                       Text="Version 1.0.0" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryColor}"
                       Margin="0,5,0,0"/>
            
            <!-- Description -->
            <TextBlock Text="A modern, user-friendly graphical interface&#x0a;for Windows Robocopy utility" 
                       TextAlignment="Center"
                       FontSize="14"
                       Margin="0,20,0,0"
                       Foreground="{StaticResource TextPrimaryColor}"/>
            
            <!-- Features -->
            <Border Background="{StaticResource CardBackgroundColor}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="âœ… Multi-threaded file copying" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Text="âœ… Multiple copy modes (Mirror, Backup, Sync, Move)" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Text="âœ… Profile save/load functionality" FontSize="12" Margin="0,0,0,5"/>
                    <TextBlock Text="âœ… Real-time progress and logging" FontSize="12"/>
                </StackPanel>
            </Border>
            
            <!-- Copyright -->
            <TextBlock Text="Â© 2026 Robocopy GUI Project" 
                       FontSize="12" 
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryColor}"
                       Margin="0,20,0,0"/>
            
            <TextBlock Text="Licensed under MIT License" 
                       FontSize="11" 
                       HorizontalAlignment="Center"
                       Foreground="{StaticResource TextSecondaryColor}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="1" 
                Background="{StaticResource CardBackgroundColor}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0" 
                Padding="20,15">
            <Button Content="OK" 
                    Style="{StaticResource PrimaryButton}" 
                    HorizontalAlignment="Center"
                    Width="100"
                    Click="OkButton_Click"/>
        </Border>
    </Grid>
</Window>
