<Window x:Class="RobocopyGUI.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Guide &amp; Help - Robocopy GUI" 
        Height="700" 
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20">
            <StackPanel>
                <TextBlock Text="üìñ User Guide &amp; Help" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Everything you need to know about Robocopy GUI" 
                           Foreground="#E3F2FD" 
                           FontSize="14" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" 
                    Background="{StaticResource CardBackgroundColor}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="0,0,15,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Contents" 
                                   FontWeight="SemiBold" 
                                   FontSize="14" 
                                   Margin="5,5,5,15"/>
                        
                        <Button Content="üöÄ Quick Start" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="QuickStart"/>
                        <Button Content="üìÅ Folder Selection" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="FolderSelection"/>
                        <Button Content="‚öôÔ∏è Copy Modes" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="CopyModes"/>
                        <Button Content="üöÄ Performance" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="Performance"/>
                        <Button Content="üìã Advanced Options" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="AdvancedOptions"/>
                        <Button Content="üíæ Profiles" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="Profiles"/>
                        <Button Content="‚å®Ô∏è Keyboard Shortcuts" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="Shortcuts"/>
                        <Button Content="‚ùì Troubleshooting" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="Troubleshooting"/>
                        <Button Content="‚ÑπÔ∏è About Robocopy" 
                                Style="{StaticResource HelpNavButton}" 
                                Click="NavButton_Click" 
                                Tag="AboutRobocopy"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Content Panel -->
            <Border Grid.Column="1" 
                    Background="{StaticResource CardBackgroundColor}" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1" 
                    CornerRadius="8">
                <ScrollViewer x:Name="ContentScrollViewer" 
                              VerticalScrollBarVisibility="Auto" 
                              Padding="20">
                    <StackPanel x:Name="ContentPanel">
                        <!-- Quick Start Section -->
                        <StackPanel x:Name="QuickStartSection">
                            <TextBlock Text="üöÄ Quick Start Guide" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>
                            
                            <TextBlock TextWrapping="Wrap" FontSize="14" Margin="0,0,0,15">
                                Welcome to Robocopy GUI! This application provides an easy-to-use interface for Windows' powerful Robocopy file copying utility.
                            </TextBlock>

                            <TextBlock Text="Getting Started in 3 Easy Steps:" 
                                       FontWeight="SemiBold" 
                                       FontSize="16" 
                                       Margin="0,0,0,10"/>

                            <Border Background="#E3F2FD" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="14">Step 1: Select Folders</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        Click "Browse" next to Source Folder to choose the folder you want to copy FROM.
                                        Then click "Browse" next to Destination Folder to choose where to copy TO.
                                        üí° Tip: You can also drag and drop folders directly into the text boxes!
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#E8F5E9" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="14">Step 2: Choose Copy Mode</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        Select a copy mode from the dropdown:
                                        ‚Ä¢ Backup - Safest option, copies new and changed files only
                                        ‚Ä¢ Mirror - Creates exact copy (deletes extra files in destination)
                                        ‚Ä¢ Sync - Synchronizes both folders
                                        ‚Ä¢ Move - Moves files (deletes from source after copy)
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#FFF3E0" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="14">Step 3: Start Copy</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        Click the "Start Copy" button (or press Ctrl+Enter) to begin!
                                        Watch the progress in the Log Output panel on the right.
                                        You can stop the operation anytime by clicking "Stop" or pressing Escape.
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="That's it! You're ready to use Robocopy GUI." 
                                       FontStyle="Italic" 
                                       Foreground="{StaticResource TextSecondaryColor}"
                                       Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Folder Selection Section -->
                        <StackPanel x:Name="FolderSelectionSection" Visibility="Collapsed">
                            <TextBlock Text="üìÅ Folder Selection" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Source Folder" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                The source folder is where your files currently exist. This is the folder you want to copy FROM.
                                
                                ‚Ä¢ Click "Browse" to open a folder picker dialog
                                ‚Ä¢ Or drag and drop a folder from Windows Explorer
                                ‚Ä¢ Network paths (UNC) are supported: \\server\share\folder
                            </TextBlock>

                            <TextBlock Text="Destination Folder" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                The destination folder is where files will be copied TO.
                                
                                ‚Ä¢ If the folder doesn't exist, Robocopy will create it
                                ‚Ä¢ Make sure you have write permissions to the destination
                                ‚Ä¢ Be careful with Mirror mode as it may delete files here
                            </TextBlock>

                            <Border Background="#FFF3E0" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold">‚ö†Ô∏è Important Notes:</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        ‚Ä¢ Always verify your paths before starting a copy operation
                                        ‚Ä¢ For network drives, ensure stable connectivity
                                        ‚Ä¢ Some operations require administrator privileges
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Copy Modes Section -->
                        <StackPanel x:Name="CopyModesSection" Visibility="Collapsed">
                            <TextBlock Text="‚öôÔ∏è Copy Modes Explained" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>

                            <Border Background="#E8F5E9" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="14">‚úÖ Backup Mode (Recommended for beginners)</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        The safest option for most users. Copies only new files and files that have changed since the last copy. Never deletes anything from the destination.
                                        
                                        Best for: Regular backups, incremental copies, first-time users
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#FFEBEE" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="14">üîÑ Mirror Mode (Use with caution)</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        Creates an exact mirror of the source folder. FILES IN THE DESTINATION THAT DON'T EXIST IN THE SOURCE WILL BE DELETED.
                                        
                                        Best for: Creating exact backups, deployment scenarios
                                        ‚ö†Ô∏è Warning: This WILL delete files in destination!
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#E3F2FD" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="14">üîÅ Sync Mode</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        Similar to Mirror mode but designed for keeping two folders synchronized. Includes additional checks for file integrity.
                                        
                                        Best for: Syncing folders between computers, maintaining identical copies
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#FFF3E0" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold" FontSize="14">üì¶ Move Mode (Use with extreme caution)</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        Copies files to the destination and then DELETES THEM FROM THE SOURCE after successful copy.
                                        
                                        Best for: Archiving files, freeing up disk space
                                        ‚ö†Ô∏è Warning: Files will be REMOVED from source!
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Performance Section -->
                        <StackPanel x:Name="PerformanceSection" Visibility="Collapsed">
                            <TextBlock Text="üöÄ Performance Settings" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Thread Count (1-128)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Controls how many files are copied simultaneously. More threads can significantly speed up copying many small files.
                                
                                Recommended settings:
                                ‚Ä¢ Small files (&lt;1 MB): 32-64 threads
                                ‚Ä¢ Medium files (1-100 MB): 8-16 threads
                                ‚Ä¢ Large files (&gt;100 MB): 1-4 threads
                                ‚Ä¢ Network copies: 8-16 threads
                                
                                Default: 8 threads (good balance for most cases)
                            </TextBlock>

                            <TextBlock Text="Retry Count" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                How many times to retry if a file copy fails (e.g., due to network issues or file locks).
                                
                                ‚Ä¢ Default: 3 retries
                                ‚Ä¢ Network copies: Consider 5-10 retries
                                ‚Ä¢ Set to 0 to skip failed files immediately
                            </TextBlock>

                            <TextBlock Text="Wait Time (seconds)" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                How long to wait between retry attempts.
                                
                                ‚Ä¢ Default: 5 seconds
                                ‚Ä¢ For locked files: Try 10-30 seconds
                                ‚Ä¢ For network issues: Try 10-60 seconds
                            </TextBlock>

                            <Border Background="#E3F2FD" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold">üí° Performance Tips:</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        ‚Ä¢ Copy between different physical drives for best speed
                                        ‚Ä¢ Use SSDs when possible - they handle multi-threading better
                                        ‚Ä¢ Temporarily disable antivirus scanning for large copies
                                        ‚Ä¢ Close other applications that might be accessing the files
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Advanced Options Section -->
                        <StackPanel x:Name="AdvancedOptionsSection" Visibility="Collapsed">
                            <TextBlock Text="üìã Advanced Options" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Copy subdirectories" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                When enabled, copies all subfolders and their contents. When disabled, only files in the root folder are copied.
                            </TextBlock>

                            <TextBlock Text="Include empty directories" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                When enabled, creates empty folders in the destination even if they contain no files. Useful for maintaining folder structure.
                            </TextBlock>

                            <TextBlock Text="Copy file attributes" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Preserves file attributes such as Read-only, Hidden, System, and timestamps. Recommended for backups.
                            </TextBlock>

                            <TextBlock Text="Restartable mode" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Enables the ability to restart interrupted transfers. Useful for large file copies over unreliable networks. Note: Slightly slower but more reliable.
                            </TextBlock>

                            <TextBlock Text="Verbose output" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Shows detailed information about each file being processed. Helpful for troubleshooting but may slow down operations slightly.
                            </TextBlock>

                            <TextBlock Text="üö´ Exclude Files (patterns)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Specify file patterns to exclude from copying. Patterns are separated by semicolons.
                                
                                Examples:
                                ‚Ä¢ *.tmp - Excludes all temporary files
                                ‚Ä¢ *.log - Excludes all log files
                                ‚Ä¢ Thumbs.db - Excludes Windows thumbnail cache files
                                ‚Ä¢ desktop.ini - Excludes Windows folder configuration files
                                
                                You can combine multiple patterns: *.tmp; *.log; Thumbs.db
                            </TextBlock>

                            <TextBlock Text="üö´ Exclude Directories" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Specify directory names to exclude from copying. Names are separated by semicolons.
                                
                                Common directories to exclude:
                                ‚Ä¢ .git - Git version control folder
                                ‚Ä¢ node_modules - Node.js dependencies
                                ‚Ä¢ bin; obj - Build output folders
                                ‚Ä¢ __pycache__ - Python cache
                                ‚Ä¢ .vs - Visual Studio settings
                                
                                Example: .git; node_modules; bin; obj
                            </TextBlock>

                            <TextBlock Text="Custom Parameters" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Add any additional Robocopy command-line parameters not covered by the GUI options. For advanced users who know Robocopy parameters.
                            </TextBlock>
                        </StackPanel>

                        <!-- Profiles Section -->
                        <StackPanel x:Name="ProfilesSection" Visibility="Collapsed">
                            <TextBlock Text="üíæ Working with Profiles" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>

                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Profiles let you save your copy settings for reuse. This is perfect for recurring backup tasks or standardized copy operations.
                            </TextBlock>

                            <TextBlock Text="Saving a Profile" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                1. Configure all your copy settings (folders, mode, options)
                                2. Click "Save Profile" button
                                3. Choose a name and location for your profile
                                4. Click Save
                                
                                Profiles are saved as JSON files that you can share or backup.
                            </TextBlock>

                            <TextBlock Text="Loading a Profile" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                1. Click "Load Profile" button
                                2. Navigate to your saved profile (.json file)
                                3. Click Open
                                
                                All settings from the profile will be applied automatically.
                            </TextBlock>

                            <Border Background="#E3F2FD" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold">üí° Profile Tips:</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        ‚Ä¢ Create separate profiles for different backup jobs
                                        ‚Ä¢ Store profiles in a shared location for team use
                                        ‚Ä¢ Name profiles descriptively (e.g., "Daily-Backup-Documents")
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Keyboard Shortcuts Section -->
                        <StackPanel x:Name="ShortcutsSection" Visibility="Collapsed">
                            <TextBlock Text="‚å®Ô∏è Keyboard Shortcuts" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>

                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Use these keyboard shortcuts to work faster with Robocopy GUI:
                            </TextBlock>

                            <Border Background="{StaticResource CardBackgroundColor}" 
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" FontWeight="SemiBold">Shortcut</TextBlock>
                                    <TextBlock Grid.Row="0" Grid.Column="1" FontWeight="SemiBold">Action</TextBlock>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,10,0,0" FontFamily="Consolas">Ctrl+Enter</TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">Start copy operation</TextBlock>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" FontFamily="Consolas">Escape</TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Margin="0,10,0,0">Stop current operation</TextBlock>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,10,0,0" FontFamily="Consolas">F1</TextBlock>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Margin="0,10,0,0">Open Help (this window)</TextBlock>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Margin="0,10,0,0" FontFamily="Consolas">Ctrl+S</TextBlock>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Margin="0,10,0,0">Save current profile</TextBlock>

                                    <TextBlock Grid.Row="5" Grid.Column="0" Margin="0,10,0,0" FontFamily="Consolas">Ctrl+O</TextBlock>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Margin="0,10,0,0">Load a profile</TextBlock>

                                    <TextBlock Grid.Row="6" Grid.Column="0" Margin="0,10,0,0" FontFamily="Consolas">Ctrl+C</TextBlock>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Margin="0,10,0,0">Copy command to clipboard</TextBlock>

                                    <TextBlock Grid.Row="7" Grid.Column="0" Margin="0,10,0,0" FontFamily="Consolas">Ctrl+L</TextBlock>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Margin="0,10,0,0">Clear log output</TextBlock>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- Troubleshooting Section -->
                        <StackPanel x:Name="TroubleshootingSection" Visibility="Collapsed">
                            <TextBlock Text="‚ùì Troubleshooting" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>

                            <TextBlock Text="Access Denied Error" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                ‚Ä¢ Run the application as Administrator
                                ‚Ä¢ Check that you have read/write permissions on both folders
                                ‚Ä¢ Ensure files aren't locked by other applications
                                ‚Ä¢ For network paths, verify your network credentials
                            </TextBlock>

                            <TextBlock Text="Copy is Very Slow" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                ‚Ä¢ Adjust thread count based on file sizes (see Performance section)
                                ‚Ä¢ Temporarily disable antivirus real-time scanning
                                ‚Ä¢ Copy to/from different physical drives
                                ‚Ä¢ Check network speed for network copies
                                ‚Ä¢ Close applications that might be accessing the files
                            </TextBlock>

                            <TextBlock Text="Files Not Copying" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                ‚Ä¢ Verify source path exists and contains files
                                ‚Ä¢ Check that file names are valid for the destination
                                ‚Ä¢ Ensure enough disk space at destination
                                ‚Ä¢ Check the log output for specific error messages
                            </TextBlock>

                            <TextBlock Text="Progress Bar Not Updating" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                This is normal behavior due to Robocopy's output buffering. Watch the log output for actual progress. The operation is still running - be patient with large file sets.
                            </TextBlock>

                            <Border Background="#FFEBEE" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold">üêõ Still Having Issues?</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        1. Enable "Verbose output" in Advanced Options
                                        2. Run the operation again
                                        3. Export the log using the "Export Log" button
                                        4. Review the detailed log for specific error messages
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- About Robocopy Section -->
                        <StackPanel x:Name="AboutRobocopySection" Visibility="Collapsed">
                            <TextBlock Text="‚ÑπÔ∏è About Robocopy" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,15"/>

                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                Robocopy (Robust File Copy) is a powerful command-line utility built into Windows that provides advanced file copying capabilities far beyond standard copy operations.
                            </TextBlock>

                            <TextBlock Text="Key Capabilities" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,15">
                                ‚Ä¢ Multi-threaded copying for maximum performance
                                ‚Ä¢ Automatic retry on failures
                                ‚Ä¢ Preserves file attributes, timestamps, and permissions
                                ‚Ä¢ Network-aware with support for interrupted transfers
                                ‚Ä¢ Detailed logging and reporting
                                ‚Ä¢ Support for very long path names
                            </TextBlock>

                            <TextBlock Text="Exit Codes" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                                Robocopy uses exit codes to indicate operation results:
                            </TextBlock>

                            <Border Background="{StaticResource CardBackgroundColor}" 
                                    BorderBrush="{StaticResource BorderColor}" 
                                    BorderThickness="1" 
                                    CornerRadius="5" 
                                    Padding="15"
                                    Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock FontFamily="Consolas" Margin="0,0,0,5">0 - No files copied, no errors</TextBlock>
                                    <TextBlock FontFamily="Consolas" Margin="0,0,0,5">1 - All files copied successfully</TextBlock>
                                    <TextBlock FontFamily="Consolas" Margin="0,0,0,5">2 - Extra files detected</TextBlock>
                                    <TextBlock FontFamily="Consolas" Margin="0,0,0,5">3 - Files copied + extras present</TextBlock>
                                    <TextBlock FontFamily="Consolas" Margin="0,0,0,5">4 - Mismatched files detected</TextBlock>
                                    <TextBlock FontFamily="Consolas" Margin="0,0,0,5">5-7 - Files copied with minor issues</TextBlock>
                                    <TextBlock FontFamily="Consolas" Foreground="{StaticResource ErrorColor}">8+ - Errors occurred</TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#E3F2FD" CornerRadius="5" Padding="15">
                                <StackPanel>
                                    <TextBlock FontWeight="SemiBold">üìö Learn More:</TextBlock>
                                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                                        For complete Robocopy documentation, visit Microsoft's official documentation or run 'robocopy /?' in Command Prompt.
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource CardBackgroundColor}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0" 
                Padding="20,15">
            <Grid>
                <TextBlock Text="Press F1 anytime in the main window to open this help." 
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondaryColor}"/>
                <Button Content="Close" 
                        Style="{StaticResource PrimaryButton}" 
                        HorizontalAlignment="Right"
                        Click="CloseButton_Click"
                        Width="100"/>
            </Grid>
        </Border>
    </Grid>
</Window>
